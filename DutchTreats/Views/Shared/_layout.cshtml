<!DOCTYPE html>
<html>
<!-- Header and Styles Section-->
<head>
    <title>Dutch Treats : @ViewBag.Title</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
</head>
<body>
    <!-- header navigation bar -->
    <div class="navbar navbar-inverse">
        <header class="container">
            <div class="navbar-header">
                <div class="navbar-brand"><i class="fa fa-paint-brush"></i>  Dutch Treats</div>
                <button class="navbar-toggle" data-toggle="collapse" data-target="#menu">&#9776</button>
            </div>
            <div id="menu" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-controller="App" asp-action="Index">Home</a></li>
                    <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
                    <li><a asp-controller="App" asp-action="About">About</a></li>
                    <li><a asp-controller="App" asp-action="Shop">Shop</a></li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><a asp-controller="Account" asp-action="Logout">Logout</a></li>
                    }
                    else
                    {
                        <li><a asp-controller="Account" asp-action="Login">Login</a></li>
                    }

                </ul>
            </div>
        </header>
    </div>
    <!-- Body Content Section -->
    <section class="container">
        <h1 class="text-center">
            @ViewBag.Title
        </h1>
        @RenderBody()
    </section>
    <!-- Footer Content system-->
    <footer class="container">
        <div class="text-center">Copyright 2018 Dutch Treats LLC</div>
    </footer>


    <!-- Scripts section -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/index.js"></script>
    @RenderSection("scripts", false)
</body>
</html>
